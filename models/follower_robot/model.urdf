<?xml version='1.0'?>
<robot name="robot_name">

    <link name="base">
        <inertial>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <mass value="1.0" />
            <inertia ixx="0.083" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="0.083" />
        </inertial>
        <collision>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1" />
            </geometry>
        </visual>
    </link>

    <link name="camera_link">
        <origin xyz="0 0 1" rpy="0 0 0" />
        <inertial>
            <mass value="0.1" />
            <inertia ixx="0.000166667" ixy="0" ixz="0" iyy="0.000166667" iyz="0" izz="0.000166667" />
        </inertial>
        <collision>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </visual>
    </link>

    <gazebo reference="camera_link">
        <sensor type="camera" name="camera1">
            <update_rate>30</update_rate>
            <camera name="head">
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <width>320</width>
                    <height>240</height>
                </image>
                <clip>
                    <near>0.01</near>
                    <far>20</far>
                </clip>
            </camera>
            <always_on>1</always_on>
            <visualize>true</visualize>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <alwaysOn>true</alwaysOn>
                <updateRate>0</updateRate>
                <robotNamespace>follower_robot</robotNamespace>
                <cameraName>camera1</cameraName>
                <imageTopicName>image_topic</imageTopicName>
                <cameraInfoTopicName>camera_info</cameraInfoTopicName>
                <frameName>camera</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <joint name="base_camera_joint" type="fixed">
        <child link="camera_link" />
        <parent link="base" />
    </joint>

    <plugin name="follower_robot_controller" filename="libgazebo_ros_planar_move.so">
        <robotNamespace>follower_robot</robotNamespace>
        <commandTopic>motion_command</commandTopic>
        <odometryTopic>odom</odometryTopic>
        <odometryFrame>base</odometryFrame>
        <odometryRate>20</odometryRate>
        <robotBaseFrame>base</robotBaseFrame>
    </plugin>

</robot>